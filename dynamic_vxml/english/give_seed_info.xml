<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1">
    <form id="seedSelectionForm">
        <block>
            <data name="seedTypes" src="seed_types.php" />
            <submit next="process_selection.php" method="post" namelist="seedType" />
        </block>

        <field name="seedType">
            <prompt>Choose a seed type:</prompt>
            <foreach item="seedType" array="seedTypes">
                <prompt>
                    Press <value expr="index + 1" /> or say <value expr="seedType" /> for <value expr="seedType" />.
                </prompt>
            </foreach>
            <grammar type="application/grammar+voicexml">
                <rule id="seedTypeRule" scope="public">
                    <one-of>
                        <item repeat="0-inf" weight="1">
                            <tag>out.seedType = $value;</tag>
                            <item>
                                <ruleref uri="#seedTypes"/>
                            </item>
                        </item>
                    </one-of>
                </rule>
                <rule id="seedTypes">
                    <item>dmft</item>
                    <item>voice</item>
                </rule>
            </grammar>
            <filled>
                <if cond="seedType">
                    <block>
                        <prompt>You selected <value expr="seedType" />. Press pound key to confirm or star key to try again.</prompt>
                        <submit next="process_selection.php" method="post" namelist="seedType" />
                    </block>
                </if>
                <else>
                    <reprompt />
                </else>
            </filled>
        </field>
    </form>
</vxml>